<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.aavu.client.domain.generated">

	<class name="AbstractMeta" abstract="true">
		<meta attribute="scope-class" inherit="false">public abstract</meta>

		<id name="id" type="int" column="meta_id">
			<generator class="native"></generator>
		</id>

		<property name="name" type="string" column="name">
			<meta attribute="use-in-equals">true</meta>
		</property>

		<union-subclass name="AbstractMetaDatedEvent" abstract="true">
			<meta attribute="generated-class">com.aavu.client.domain.generated.AbstractMetaDatedEvent</meta>
		</union-subclass>

	</class>


	<union-subclass name="MetaMovie" extends="AbstractMetaDatedEvent">
		<meta attribute="generated-class" inherit="false">com.aavu.client.domain.generated.AbstractMetaMovie</meta>
		<meta attribute="scope-class" inherit="false">public abstract</meta>
		<property name="director" type="string" column="director" />
	</union-subclass>

	<union-subclass name="MetaPlay" extends="AbstractMetaDatedEvent">
		<meta attribute="generated-class" inherit="false">com.aavu.client.domain.generated.AbstractMetaPlay</meta>
		<meta attribute="scope-class" inherit="false">public abstract</meta>
		<property name="author" type="string" column="director" />
	</union-subclass>

	<union-subclass name="MetaBook" extends="AbstractMetaDatedEvent">
		<meta attribute="generated-class" inherit="false">com.aavu.client.domain.generated.AbstractMetaBook</meta>
		<meta attribute="scope-class" inherit="false">public abstract</meta>
		<property name="author" type="string" column="director" />
	</union-subclass>

	<union-subclass name="MetaThought" extends="AbstractMeta">
		<meta attribute="generated-class" inherit="false">com.aavu.client.domain.generated.AbstractMetaThought</meta>
		<meta attribute="scope-class" inherit="false">public abstract</meta>
	</union-subclass>


</hibernate-mapping>