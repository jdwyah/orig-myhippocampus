<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.aavu.client.domain">

	<class name="Meta" table="Meta" abstract="true">
		<meta attribute="generated-class" inherit="false">com.aavu.client.domain.generated.AbstractMeta</meta>
		<meta attribute="scope-class" inherit="false">public abstract</meta>

		<id name="id" type="long" column="meta_id">
			<generator class="native"></generator>
		</id>

		<discriminator column="discriminator" type="string"/>

		<property name="name" type="string" column="name">
			<meta attribute="field-description">The type.</meta>
			<meta attribute="use-in-equals">true</meta>
		</property>

		<property name="type" type="string" column="type">
			<meta attribute="field-description">The type of the value</meta>
			<meta attribute="use-in-equals">true</meta>
		</property>

		
		
		<subclass name="MetaDate" discriminator-value="date">
			<meta attribute="generated-class" inherit="false">com.aavu.client.domain.generated.AbstractMetaDate</meta>
		</subclass>
		
		<subclass name="MetaText" discriminator-value="text">
			<meta attribute="generated-class" inherit="false">com.aavu.client.domain.generated.AbstractMetaText</meta>
		</subclass>
		
		<subclass name="MetaTopicList" discriminator-value="topiclist">
			<meta attribute="generated-class" inherit="false">com.aavu.client.domain.generated.AbstractMetaTopicList</meta>
		</subclass>


	</class>

</hibernate-mapping>