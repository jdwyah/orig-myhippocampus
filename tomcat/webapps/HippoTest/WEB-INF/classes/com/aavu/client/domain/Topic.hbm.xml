<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.aavu.client.domain">

	<class name="Topic" table="Topics">
		<meta attribute="generated-class">com.aavu.client.domain.generated.AbstractTopic</meta>
		<meta attribute="scope-class">public abstract</meta>

		<id name="id" type="long" column="topic_id" unsaved-value="0">
			<generator class="native"></generator>
		</id>

		<many-to-one name="user" class="User" column="user_id" />

		<property name="title" type="string" column="title">
			<meta attribute="use-in-equals">true</meta>
			<meta attribute="field-description">The title of this entry</meta>
		</property>

		<property name="text" type="string">
			<meta attribute="field-description">The text in hippoText format</meta>
			<column name="text" sql-type="text" />
		</property>
		<property name="lastUpdated" type="java.util.Date">
			<meta attribute="field-description">Last updated</meta>
			<column name="lastUpdated" sql-type="timestamp" />
		</property>

		<list name="tags" lazy="false" table="Topics_tags">
			<key column="topic_id" />
			
			<list-index column="tag_list_index"/>
			<many-to-many column="tag_id" class="com.aavu.client.domain.Tag" ></many-to-many>
<!-- 			<one-to-many class="com.aavu.client.domain.Tag" />-->
		</list>

		

