<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">


<beans>


	<bean id="container" class="org.db4ospring.ObjectContainerFactoryBean">
		<property name="databaseFile" value="file:c:\\DB\\db.yap"/>	
	</bean>

	<bean id="TopicDAO" class="com.aavu.server.dao.db4o.TopicDAOdb4oImpl">
		<property name="objectContainer" ref="container"/>
	</bean>
	<bean id="TagDAO" class="com.aavu.server.dao.db4o.TagDAOdb4oImpl">
		<property name="objectContainer" ref="container"/>
	</bean>	
	<bean id="UserDAO" class="com.aavu.server.dao.db4o.UserDAOImpl">
		<property name="objectContainer" ref="container"/>
	</bean>

	<bean id="TopicService" class="com.aavu.server.TopicServiceImpl">
		<property name="setByDI" value="I WAS SET" />
		<property name="topicDAO" ref="TopicDAO"/>
	</bean>
	<bean id="TagService" class="com.aavu.server.TagServiceImpl">
		<property name="tagDAO" ref="TagDAO"></property>
	</bean>

	<bean id="UserService" class="com.aavu.server.service.UserServiceImpl">
		<property name="userDAO" ref="UserDAO"/>
	</bean>

</beans>