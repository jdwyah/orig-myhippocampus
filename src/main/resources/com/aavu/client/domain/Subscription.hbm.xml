<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.aavu.client.domain">

	<class name="Subscription" table="Subscriptions">
		<meta attribute="generated-class">com.aavu.client.domain.generated.AbstractSubscription</meta>
		<meta attribute="scope-class">public abstract</meta>

		<id name="id" type="long" column="subscription_id">
			<generator class="native"></generator>
		</id>

		<property name="price" type="double" column="price"></property>
		<property name="maxTopics" type="int" column="maxTopics"></property>
		<property name="description" type="string" column="description"></property>


	</class>

</hibernate-mapping>